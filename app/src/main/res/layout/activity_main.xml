<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fun"
    android:layoutDirection="ltr">

    <!-- Lives (Hearts) -->
    <LinearLayout
        android:id="@+id/livesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/heart1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"/>

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"/>

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/heart"/>
    </LinearLayout>

    <!-- Meters Counter -->
    <TextView
        android:id="@+id/metersTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meters Passed: 0"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/comic_light"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/livesLayout"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Coins Counter -->
    <TextView
        android:id="@+id/coinsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coins: 0"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/comic_light"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/metersTextView"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bombs Grid -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="100dp"
        android:columnCount="5"
        android:rowCount="12"
        app:layout_constraintTop_toBottomOf="@id/metersTextView"
        app:layout_constraintBottom_toTopOf="@+id/buttonsLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Move Buttons -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/bLeft"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/arrowleft"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="left arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/bRight"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/arrowright"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="right arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
