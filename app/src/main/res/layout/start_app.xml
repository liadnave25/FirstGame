<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_fun"
    android:padding="24dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSlow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Slow Mode"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/comic_italy"
        android:backgroundTint="#FFEB3B"
        app:cornerRadius="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnFast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fast Mode"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/comic_italy"
        android:backgroundTint="#FFEB3B"
        app:cornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/btnSlow"
        app:layout_constraintBottom_toTopOf="@+id/btnSensor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSensor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sensor Mode"
        android:textColor="#000000"
        android:textSize="18sp"
        android:fontFamily="@font/comic_italy"
        android:backgroundTint="#FFEB3B"
        app:cornerRadius="50dp"
        app:layout_constraintTop_toBottomOf="@id/btnFast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
